generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Plant {
  id        Int      @default(autoincrement()) @id
  name      String
  description String?
  category  String
  stock     Int
  price     Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  imageUrl String?
}

